pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            steps {
                echo 'Git Checkout'
                git branch: 'main', credentialsId: 'gitpwd', url: 'https://github.com/nareshreddy1238/Javaweb.git'
            }
        }
        stage('Validate') {
            steps {
                echo 'Validating..'
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                echo 'Package....'
                sh 'mvn package'
            }
        }
       stage('Deploy') {
           steps {
               echo 'Deploy...'
               sshagent(['tomcat_pwd']) {
               sh """
                  ssh -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/demo/target/*.war ec2-user@192.168.1.106:~/apache-tomcat-7.0.94/webapps/
                  ssh ec2-user@192.168.1.106 ~/apache-tomcat-7.0.94/bin/shutdown.sh 
                  ssh ec2-user@192.168.1.106 ~/apache-tomcat-7.0.94/bin/startup.sh
                """
       }
     }
    }
   }
 }
